{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "preserveConstEnums": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*",
    "webpack.config.js",
    "dist",
    "__tests__",
  ]
}