{
  "name": "@aurorix-game/aurorix-core",
  "version": "1.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack",
    "test": "jest --runInBand --detectOpenHandles",
    "test:summary": "jest --runInBand --coverageReporters=\"json-summary\"",
    "watch": "tsc --watch --noEmit --project './tsconfig.json'",
    "compile": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --ext .ts --ignore-pattern 'src/@types/*' ./src --no-error-on-unmatched-pattern"
  },
  "pre-commit": [
    "lint",
    "compile"
  ],
  "dependencies": {
    "yup": "^0.31.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/yup": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^26.6.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "typescript-transform-paths": "^3.0.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aurorix-game/aurorix-core.git"
  },
  "description": "The core logic for Aurorix Game",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}